{% extends 'base.html.twig' %}

{% block title %}Connexion ARTOUNSI{% endblock %}

{% block body %}
<section class="background-radial-gradient overflow-hidden">
  <style>
    .background-radial-gradient {
      background: linear-gradient(135deg, #2D2B30 20%, #3A3A3A 80%);
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .bg-glass {
      background: rgba(255, 255, 255, 0.9);
      backdrop-filter: blur(15px);
      border-radius: 15px;
      padding: 30px;
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    }

    .logo {
      width: 200px;
      height: 200px;
      border-radius: 70%;
      object-fit: cover;
      margin-bottom: 30px;
      display: block;
      margin-left: auto;
      margin-right: auto;
    }

    .main-text {
      color: #FFFFFF;
      font-weight: 700;
      text-align: center;
      text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
    }

    .accent-text {
      color: #E52C2C;
      font-weight: bold;
    }

    .btn-primary {
      background-color: #E52C2C;
      border: none;
      transition: background 0.3s;
    }

    .btn-primary:hover {
      background-color: #C41F1F;
    }

    .btn {
      padding: 10px;
      font-size: 1rem;
      border-radius: 8px;
    }

    .input-group {
      position: relative;
    }

    #togglePassword {
      position: absolute;
      right: 10px;
      top: 50%;
      transform: translateY(-50%);
      background: none;
      border: none;
      cursor: pointer;
    }

    .login-btn {
      width: 100%;
      text-align: center;
    }

    .btn-group {
      margin-top: 20px;
    }

    .register-link {
      text-align: center;
      font-size: 1rem;
      color: #32B3DC;
      font-weight: bold;
      text-decoration: none;
    }

    .register-link:hover {
      text-decoration: underline;
    }
  </style>

  <div class="container my-5">
    <div class="row align-items-center justify-content-center">
      <div class="col-md-5 text-center">
        <img src="{{ asset('images/logo-artounsi.png') }}" alt="Logo Artounsi" class="logo">
        <h1 class="my-4 display-5 main-text">
          <span class="accent-text">مرحبا بيك في Artounsi !</span>
          <br />
          <span style="color: #32B3DC;">Bienvenue dans la famille de l'art et de l'artisanat tunisien !</span>
        </h1>
      </div>

      <div class="col-md-6">
        <div class="card bg-glass">
          <div class="card-body">
            {{ form_start(form, {'method': 'POST', 'attr': {'novalidate': 'novalidate'}}) }}
{% for message in app.flashes('error') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
{% endfor %}


        

            <div class="mb-3">
              {{ form_label(form.email) }}
              {{ form_widget(form.email, {'attr': {'name': '_email'}}) }}
              {% if form_errors(form.email) is not empty %}
                <div class="text-danger">
                  {{ form_errors(form.email) }}
                </div>
              {% endif %}
            </div>

            <div class="mb-3 position-relative">
              {{ form_label(form.password) }}
              <div class="input-group">
                {{ form_widget(form.password, {'attr': {'id': 'password-field'}}) }}
                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                    <i class="fas fa-eye"></i>
                </button>
              </div>
              {% if form_errors(form.password) is not empty %}
                <div class="text-danger">
                    {{ form_errors(form.password) }}
                </div>
              {% endif %}
            </div>

            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="form-check">
                <input class="form-check-input" type="checkbox" id="remember-me" checked>
                <label class="form-check-label" for="remember-me"> Se souvenir de moi </label>
              </div>
              <a href="#" class="text-danger">Mot de passe oublié ?</a>
            </div>

            <div class="login-btn">
              <div>{{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary btn-lg'}}) }}</div>
            </div>

            <div class="text-center my-3">
              <p class="fw-bold text-dark">OU</p>
            </div>

            <div class="text-center">
                 <a class="btn btn-primary w-50" href="#">
                    <i class="fab fa-google"></i> Continuer avec Google
                </a>
            </div>
            <div class="text-center my-3">
              <!-- Lien texte pour l'inscription -->
            <div class="text-center">
              <a href="{{ path('app_register') }}" class="register-link">Ma3andkch compte ? Yala Inscrivez-vous !</a>
            </div>

            {{ form_end(form) }}
               {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener("DOMContentLoaded", function() {
    document.getElementById("togglePassword").addEventListener("click", function() {
      let passwordField = document.getElementById("password-field");
      let icon = this.querySelector("i");

      if (passwordField.type === "password") {
        passwordField.type = "text"; 
        icon.classList.remove("fa-eye");
        icon.classList.add("fa-eye-slash");
      } else {
        passwordField.type = "password"; 
        icon.classList.remove("fa-eye-slash");
        icon.classList.add("fa-eye");
      }
    });
  });
</script>

{% endblock %}
