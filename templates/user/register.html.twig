{% extends 'base.html.twig' %}

{% block title %}Inscription ARTOUNSI{% endblock %}

{% block body %}
  <div class="container mt-5">
    <h1 class="text-center mb-4">Inscription</h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <div class="row">
      <div class="col-12 mb-3">
        {{ form_label(form.name, 'Prénom') }}
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.name) }}
      </div>

      <div class="col-12 mb-3">
        {{ form_label(form.familyname, 'Nom') }}
        {{ form_widget(form.familyname, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.familyname) }}
      </div>

      <div class="col-12 mb-3">
        {{ form_label(form.email, 'Email') }}
        {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.email) }}
      </div>

      <div class="col-12 mb-3">
        {{ form_label(form.password, 'Mot de passe') }}
        {{ form_widget(form.password, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.password) }}
      </div>

      <div class="col-12 mb-3">
        {{ form_label(form.confirmPassword, 'Confirmer le mot de passe') }}
        {{ form_widget(form.confirmPassword, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.confirmPassword) }}
      </div>

      <div class="col-12 mb-3">
        {{ form_label(form.cin, 'CIN') }}
        {{ form_widget(form.cin, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.cin) }}
      </div>

      <div class="col-12 mb-3">
        {{ form_label(form.numtel, 'Numéro de téléphone') }}
        {{ form_widget(form.numtel, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.numtel) }}
      </div>

      <div class="col-12 mb-3">
        {{ form_label(form.adresse, 'Adresse') }}
        {{ form_widget(form.adresse, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.adresse) }}
      </div>

      <div class="col-12 mb-3">
        {{ form_label(form.dateNaissance, 'Date de naissance') }}
        {{ form_widget(form.dateNaissance, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.dateNaissance) }}
      </div>

      <div class="col-12 mb-3">
        {{ form_label(form.role, 'Rôle') }}
        {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.role) }}
      </div>
         <div class="form-group mb-2">
            {{ form_label(form.photo, 'Photo de profil', {'label_attr': {'class': 'font-weight-bold'}}) }}
            {{ form_widget(form.photo, {'attr': {'class': 'form-control-file'}}) }}
            {{ form_errors(form.photo) }}
        </div>


      <div class="col-12 text-center">
        {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
      </div>
    </div>

    {{ form_end(form) }}
  </div>
{% endblock %}
