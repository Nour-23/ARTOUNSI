{% extends 'base.html.twig' %}

{% block title %}Changer le mot de passe{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h2 class="mb-4">Changer votre mot de passe</h2>

        {# Affichage des messages Flash pour success, error, warning et info #}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('warning') %}
            <div class="alert alert-warning">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('info') %}
            <div class="alert alert-info">{{ message }}</div>
        {% endfor %}

        {# Affichage de la barre de progression #}
        {% if progress is not null %}
            <div class="progress mb-3">
                <div class="progress-bar" role="progressbar" style="width: {{ progress }}%" aria-valuenow="{{ progress }}" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <p class="text-center">Avancement : {{ progress }}%</p>
        {% endif %}

        {# Formulaire de changement de mot de passe #}
        {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'form-group'}}) }}

        <div class="mb-3">
            {{ form_label(form.currentPassword, 'Mot de passe actuel', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.currentPassword, {'attr': {'class': 'form-control', 'aria-describedby': 'currentPasswordHelp'}}) }}
            {{ form_errors(form.currentPassword) }}  {# Afficher les erreurs pour le champ currentPassword #}
        </div>

        <div class="mb-3">
            {{ form_label(form.newPassword, 'Nouveau mot de passe', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.newPassword, {'attr': {'class': 'form-control', 'aria-describedby': 'newPasswordHelp'}}) }}
            {{ form_errors(form.newPassword) }}  {# Afficher les erreurs pour le champ newPassword #}
        </div>

        <div class="mb-3">
            {{ form_label(form.confirmPassword, 'Confirmer le nouveau mot de passe', {'attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.confirmPassword, {'attr': {'class': 'form-control', 'aria-describedby': 'confirmPasswordHelp'}}) }}
            {{ form_errors(form.confirmPassword) }}  {# Afficher les erreurs pour le champ confirmPassword #}
        </div>


        <div class="form-group text-center">
            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary w-50'}}) }} <!-- Bouton centrÃ© -->
        </div>

        {{ form_end(form) }}
    </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
