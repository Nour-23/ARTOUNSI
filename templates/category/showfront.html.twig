{% extends 'base.html.twig' %}

{% block title %}Détails de la Catégorie{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Détails de la Catégorie</h1>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th scope="row">ID</th>
                    <td>{{ category.id }}</td>
                </tr>
                <tr>
                    <th scope="row">Nom</th>
                    <td>{{ category.nom }}</td>
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>{{ category.description }}</td>
                </tr>
                <tr>
                    <th scope="row">Formations Associées</th>
                    <td>
                        {% if category.formations is not empty %}
                            <ul class="list-group">
                                {% for formation in category.formations %}
                                    <li class="list-group-item">{{ formation.nom }}</li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="text-muted">Aucune formation associée.</p>
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>

        <div class="mt-3">
            <a href="{{ path('app_front') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>

        
    </div>
{% endblock %}