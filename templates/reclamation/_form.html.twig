<div class="container mt-4">
    <div class="card shadow-lg p-4">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}

        <!-- Title -->
        <div class="mb-3">
            {{ form_label(form.titre, 'Title', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.titre, {'attr': {'class': 'form-control', 'placeholder': 'Enter title'}}) }}
            {% for error in form.titre.vars.errors %}
                <div class="text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>

        <!-- Description -->
        <div class="mb-3">
            {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Enter description'}}) }}
            {% for error in form.description.vars.errors %}
                <div class="text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>

        <!-- Category -->
        <div class="mb-3">
            {{ form_label(form.categorie, 'Category', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.categorie, {'attr': {'class': 'form-select'}}) }}
            {% for error in form.categorie.vars.errors %}
                <div class="text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>

        <!-- Submit Button -->
        <div class="text-center">
            <button class="btn btn-success px-4 py-2">
                <i class="fas fa-save"></i> {{ button_label|default('Save') }}
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>

<!-- Bootstrap Validation Script -->
<script>
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>

<!-- Custom Styles -->
<style>
    .container {
        max-width: 600px;
    }
    .card {
        border-radius: 12px;
        background-color: #fff;
    }
    .form-control, .form-select {
        border-radius: 8px;
    }
    .btn-success {
        font-size: 18px;
        border-radius: 8px;
    }
    .text-danger {
        font-size: 0.9rem;
    }
</style>
