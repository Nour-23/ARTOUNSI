{% extends 'base.html.twig' %}

{% block title %}Reclamation Details{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="text-center mb-4">Reclamation Details</h2>

    <div class="card shadow-lg p-4">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="bg-light">ID</th>
                        <td>{{ reclamation.id }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Title</th>
                        <td>{{ reclamation.titre }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Description</th>
                        <td>{{ reclamation.description }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Status</th>
                        <td>
                            <span class="badge 
                                {% if reclamation.statut == 'Pending' %} bg-warning 
                                {% elseif reclamation.statut == 'Resolved' %} bg-success 
                                {% elseif reclamation.statut == 'Rejected' %} bg-danger 
                                {% else %} bg-secondary {% endif %}">
                                {{ reclamation.statut }}
                            </span>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-center gap-3 mt-3">
        <a href="{{ path('app_reclamation_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
        <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit
        </a>
        {{ include('reclamation/_delete_form.html.twig') }}
    </div>
</div>

<style>
    .container {
        max-width: 700px;
    }
    .card {
        border-radius: 12px;
    }
    .table th {
        width: 30%;
        text-align: left;
    }
    .badge {
        font-size: 14px;
        padding: 8px;
        border-radius: 8px;
    }
</style>
{% endblock %}
