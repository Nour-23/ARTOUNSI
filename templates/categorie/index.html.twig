{% extends 'base.html.twig' %}

{% block title %}Categorie Index{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="text-center mb-4">Categories</h2>

    <div class="row">
        {% for categorie in categories %}
            <div class="col-md-4">
                <div class="card shadow-lg p-3 mb-4 bg-white rounded">
                    <div class="card-body">
                        <h5 class="card-title text-primary">{{ categorie.type }}</h5>
                        <p class="card-text"><strong>Sous Categorie:</strong> {{ categorie.sousCategorie }}</p>
                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Show
                            </a>
                            <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12 text-center">
                <div class="alert alert-warning">No records found.</div>
            </div>
        {% endfor %}
    </div>

    <div class="text-center mt-3">
        <a href="{{ path('app_categorie_new') }}" class="btn btn-success">
            <i class="fas fa-plus-circle"></i> Create New
        </a>
    </div>
</div>

<style>
    .card {
        border-radius: 12px;
        transition: transform 0.2s;
    }
    .card:hover {
        transform: scale(1.03);
    }
    .card-title {
        font-weight: bold;
    }
    .btn-sm {
        padding: 5px 10px;
        font-size: 14px;
    }
</style>
{% endblock %}
