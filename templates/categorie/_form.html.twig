{{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
    <div class="card shadow-lg p-4 mb-4 bg-white rounded">
        <h4 class="text-center text-primary mb-4">Category Form</h4>

        <!-- Category Type -->
        <div class="mb-3">
            {{ form_label(form.type, 'Category Type', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.type, {'attr': {'class': 'form-control', 'placeholder': 'Enter category type'}}) }}
            {% for error in form.type.vars.errors %}
                <div class="text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>

        <!-- Subcategory -->
        <div class="mb-3">
            {{ form_label(form.sousCategorie, 'Subcategory', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(form.sousCategorie, {'attr': {'class': 'form-control', 'placeholder': 'Enter subcategory'}}) }}
            {% for error in form.sousCategorie.vars.errors %}
                <div class="text-danger">{{ error.message }}</div>
            {% endfor %}
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-success w-100">
            <i class="fas fa-save"></i> {{ button_label|default('Save') }}
        </button>
    </div>
{{ form_end(form) }}

<!-- Bootstrap Form Validation Script -->
<script>
    (function () {
        'use strict';
        var forms = document.querySelectorAll('.needs-validation');
        Array.prototype.slice.call(forms).forEach(function (form) {
            form.addEventListener('submit', function (event) {
                if (!form.checkValidity()) {
                    event.preventDefault();
                    event.stopPropagation();
                }
                form.classList.add('was-validated');
            }, false);
        });
    })();
</script>

<style>
    .card {
        max-width: 500px;
        margin: auto;
        border-radius: 12px;
    }
    .btn {
        font-weight: bold;
    }
    .text-danger {
        font-size: 0.9rem;
    }
</style>
