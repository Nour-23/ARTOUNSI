{% extends 'base2.html.twig' %}


{% block title %}Categorie Details{% endblock %}

{% block body %}
<div class="container mt-4">
    <h2 class="text-center mb-4">Categorie Details</h2>

    <div class="card shadow-lg p-4">
        <div class="card-body">
            <table class="table table-bordered">
                <tbody>
                    <tr>
                        <th class="bg-light">ID</th>
                        <td>{{ categorie.id }}</td>
                    </tr>
                    <tr>
                        <th class="bg-light">Type</th>
                        <td><span class="badge bg-primary">{{ categorie.type }}</span></td>
                    </tr>
                    <tr>
                        <th class="bg-light">Sous Categorie</th>
                        <td>{{ categorie.sousCategorie }}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-center gap-3 mt-3">
        <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
        <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-primary">
            <i class="fas fa-edit"></i> Edit
        </a>
        {{ include('categorie/_delete_form.html.twig') }}
    </div>
</div>

<style>
    .container {
        max-width: 700px;
    }
    .card {
        border-radius: 12px;
    }
    .table th {
        width: 30%;
        text-align: left;
    }
    .badge {
        font-size: 14px;
        padding: 8px;
        border-radius: 8px;
    }
</style>
{% endblock %}
