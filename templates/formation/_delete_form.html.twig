<form method="post" action="{{ path('app_formation_delete', {'id': formation.id}) }}" 
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette formation ? Cette action est irréversible.');">
    
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ formation.id) }}">

    <button type="submit" class="btn btn-danger" title="Supprimer">
        <i class="fas fa-trash"></i> Supprimer
    </button>

</form>
