{% extends 'base.html.twig' %}

{% block title %}Liste des Formations{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="mb-4">Liste des Formations</h1>

        <table class="table table-bordered table-striped shadow">
            <thead class="table-dark">
                <tr>
                    <th>Nom</th>
                    <th>Description</th>
                    <th>Date de début</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for formation in formations %}
                    <tr>
                        <td>{{ formation.nom }}</td>
                        <td>{{ formation.description }}</td>
                        <td>{{ formation.dateDebut ? formation.dateDebut|date('d/m/Y') : 'Non spécifiée' }}</td>
                        <td class="text-center">
                            <a href="{{ path('app_formation_showfront', {'id': formation.id}) }}" class="btn btn-info btn-sm">
                                <i class="fas fa-eye"></i> Voir
                            </a>
                            <form method="post" action="{{ path('reserver', {'id': formation.id}) }}" style="display:inline;">
                                <button class="btn btn-primary btn-sm" type="submit">
                                    <i class="fas fa-check"></i> Réserver
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-muted">Aucune formation trouvée.</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}