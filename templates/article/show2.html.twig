{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1 class="text-center my-4">Détails de l'Article</h1>

    <div class="container">
        <div class="card mb-4" style="max-width: 800px; margin: 0 auto;">
            <div class="row g-0">
                <!-- Image -->
                <div class="col-md-4">
                    <img src="{{ article.image ? asset('uploads/article/' ~ article.image) : asset('images/default-image.png') }}" 
                         alt="{{ article.nom }}" 
                         class="img-fluid rounded-start" 
                         style="max-height: 200px; object-fit: cover;">
                </div>

                <!-- Détails de l'article -->
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.nom }}</h5>
                        <p class="card-text">{{ article.description }}</p>
                        <table class="table table-bordered">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ article.id }}</td>
                                </tr>
                                <tr>
                                    <th>Prix</th>
                                    <td>{{ article.prix }} TND</td>
                                </tr>
                                <tr>
                                    <th>Nombre d'articles</th>
                                    <td>{{ article.nbrearticle }}</td>
                                </tr>
                                <tr>
                                    <th>Date de publication</th>
                                    <td>{{ article.publiactiondate ? article.publiactiondate|date('Y-m-d H:i:s') : 'Non définie' }}</td>
                                </tr>
                            </tbody>
                        </table>
                        <a href="{{ path('app_article_indexfront') }}" class="btn btn-secondary me-3">Retour à la liste</a>

                       
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
