{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
    <h1>Article index</h1>

    <table class="table">
        <thead>
            <tr>
                
                <th>Nom</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Nbrearticle</th>
                <th>Categorie</th>

                <th>Image</th>
                <th>Publiactiondate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                
                <td>{{ article.nom }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.prix }}</td>
                <td>{{ article.nbrearticle }}</td>
                <td>{{ article.categorie.nom }}</td>

                    <td>
                        {% if article.image %}
                            <img src="{{ asset('uploads/images/' ~ article.image) }}" alt="{{ article.nom }}" width="100">
                        {% else %}
                            No image
                        {% endif %}
                    </td>
                <td>{{ article.publiactiondate ? article.publiactiondate|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_article_show', {'id': article.id}) }}">show</a>
                    <a href="{{ path('app_article_edit', {'id': article.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_article_new') }}">Create new</a>
{% endblock %}
