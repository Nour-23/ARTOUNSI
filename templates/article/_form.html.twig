<div class="container d-flex justify-content-center align-items-center vh-70">
    <div class="card p-4 shadow-lg" style="max-width: 600px; width: 100%;">
        <h2 class="text-center mb-4">ARTOUNSI</h2>
        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
        
        <div class="mb-3">
            {{ form_label(form.nom) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
            {% if form.nom.vars.errors|length > 0 %}
                <div class="invalid-feedback d-block">
