{% extends 'base.html.twig' %}

{% block title %}Event details{% endblock %}

{% block body %}
    <div class="container my-4">
        <div class="text-center mb-4">
            <h1>{{ event.title }}</h1>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <table class="table table-bordered table-striped">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ event.id }}</td>
                        </tr>
                        <tr>
                            <th>Title</th>
                            <td>{{ event.title }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ event.description }}</td>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Location</th>
                            <td>{{ event.location }}</td>
                        </tr>
                        <tr>
                            <th>Created At</th>
                            <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                        <tr>
                            <th>Updated At</th>
                            <td>{{ event.updatedAt ? event.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                        </tr>
                    </tbody>
                </table>

                <div class="d-flex justify-content-between mt-4">
                    <a href="{{ path('event_index') }}" class="btn btn-secondary">Back to List</a>
                    <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-primary">Edit</a>
                </div>

                <div class="mt-4 text-center">
                    {{ include('event/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
