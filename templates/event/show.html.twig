{% extends 'base.html.twig' %}

{% block title %}Event details{% endblock %}

{% block body %}
    <h1>{{ event.title }}</h1>

    <table class="table">
        <tr>
            <th>ID</th>
            <td>{{ event.id }}</td>
        </tr>
        <tr>
            <th>Title</th>
            <td>{{ event.title }}</td>
        </tr>
        <tr>
            <th>Description</th>
            <td>{{ event.description }}</td>
        </tr>
        <tr>
            <th>Date</th>
            <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Location</th>
            <td>{{ event.location }}</td>
        </tr>
        <tr>
            <th>Created At</th>
            <td>{{ event.createdAt ? event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
        <tr>
            <th>Updated At</th>
            <td>{{ event.updatedAt ? event.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
        </tr>
    </table>

    <a href="{{ path('event_index') }}">back to list</a>
    <a href="{{ path('event_edit', {'id': event.id}) }}">edit</a>
    {{ include('event/_delete_form.html.twig') }}
    {% endblock %}
