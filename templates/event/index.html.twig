{% extends 'back.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
   
    <div class="container mt-4">
        
        <h2 class="text-center mb-4">Liste des Événements</h2>

        <form method="get" action="{{ path('event_index') }}" class="mb-4">
            <div class="btn-group">
                <button type="button" class="btn btn-danger dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    {% if selectedCategory %}
                        {{ selectedCategory }}
                    {% else %}
                        Select Category
                    {% endif %}
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="{{ path('event_index') }}">All Categories</a></li>
                    {% for category in categories %}
                        <li>
                            <a class="dropdown-item" href="{{ path('event_index', {'category': category}) }}">
                                {{ category }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </form>
        


        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Category</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.title }}</td>
                        <td>{{ event.description }}</td>
                        <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : 'No Date' }}</td>
                        <td>{{ event.eventCategory }}</td>
                        <td>{{ event.location }}</td>
                        <td>
                            <a href="{{ path('event_show', {'id': event.id}) }}" class="btn btn-primary">Show</a>
                            <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-primary">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="container text-center mt-4 ">
        <a href="{{ path('event_new') }}" class="btn btn-secondary me-2 text-white">Create New Event</a>
    </div>
{% endblock %}
