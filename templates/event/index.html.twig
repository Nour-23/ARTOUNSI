{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
    {# Start Hero Section #} 
    <div class="hero">
        <div class="container">
            <div class="row justify-content-between">
                <div class="col-lg-5">
                    <div class="intro-excerpt">
                        <h1>Bienvenue à l'Espace des Événements</h1>
                        <p class="mb-4">Découvrez et participez à nos événements passionnants.</p>
                        <p><a href="{{ path('event_new') }}" class="btn btn-secondary me-2">Créer un Événement</a></p>
                    </div>
                </div>
                <div class="col-lg-7">
                    <div class="hero-img-wrap">
                        <img src="https://news.gnet.tn/wp-content/uploads/2022/06/couvvvvvvvvvv.jpg" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </div>
    {# End Hero Section #}

    <div class="container mt-4">
        <h2 class="text-center mb-4">Liste des Événements</h2>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.title }}</td>
                        <td>{{ event.description }}</td>
                        <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : 'No Date' }}</td>
                        <td>{{ event.location }}</td>
                        <td>
                            <a href="{{ path('event_show', {'id': event.id}) }}" class="btn btn-info btn-sm">Show</a>
                            <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="container text-center mt-4">
        <a href="{{ path('event_new') }}" class="btn btn-secondary me-2">Create New Event</a>
    </div>
{% endblock %}
