{% extends 'base.html.twig' %}

{% block title %}Event index{% endblock %}

{% block body %}
   
    <div class="container mt-4">
        <h2 class="text-center mb-4">Liste des Événements</h2>

        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Date</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for event in events %}
                    <tr>
                        <td>{{ event.title }}</td>
                        <td>{{ event.description }}</td>
                        <td>{{ event.date ? event.date|date('Y-m-d H:i:s') : 'No Date' }}</td>
                        <td>{{ event.location }}</td>
                        <td>
                            <a href="{{ path('event_show', {'id': event.id}) }}" class="btn btn-info btn-sm">Show</a>
                            <a href="{{ path('event_edit', {'id': event.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center">No records found</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="container text-center mt-4">
        <a href="{{ path('event_new') }}" class="btn btn-secondary me-2">Create New Event</a>
    </div>
{% endblock %}
