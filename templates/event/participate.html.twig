{% extends 'base.html.twig' %}

{% block title %}Available Events{% endblock %}

{% block body %}

 {# Start Hero Section #} 
 <div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Bienvenue à l'Espace des Événements</h1>
                    <p class="mb-4">Explorez un monde d'opportunités et de découvertes en participant à nos événements captivants, conçus pour vous offrir des expériences inoubliables </p>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="hero-img-wrap">
                    <img src="https://news.gnet.tn/wp-content/uploads/2022/06/couvvvvvvvvvv.jpg" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</div>
{# End Hero Section #}

    <div class="container mt-4">

        <h1 class="text-center mb-4">Événements Disponibles</h1>
        {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>

    {% endfor %}
        <div class="row">
            {% for event in events %}
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="event-card p-4 border rounded shadow-sm">
                    <h3>{{ event.title }}</h3>
                    <p>{{ event.description }}</p>
                    <p><strong>Date:</strong> {{ event.date|date('d-m-Y') }}</p>

                    {# Show Participate button without checking login status #}
                    <a href="{{ path('participant_event_participate', {'id': event.id}) }}" class="btn btn-secondary me-2 text-white">Participate</a>
                </div>
            </div>
            {% else %}
            <div class="col-12">
                <p class="text-center">No events available at the moment.</p>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}



