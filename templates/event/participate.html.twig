{% extends 'base.html.twig' %}

{% block title %}Available Events{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.css" rel="stylesheet" />
    
{% endblock %}

{% block body %}

<!-- Start Hero Section -->
<div class="hero">
    <div class="container">
        <div class="row justify-content-between">
            <div class="col-lg-5">
                <div class="intro-excerpt">
                    <h1>Explore Our Events</h1>
                    <p class="mb-4">Join us in discovering exciting events designed to enrich your experience. Find your next opportunity today!</p>
                    <p><a href="#calendar" class="btn btn-secondary me-2">View Calendar</a><a href="#events" class="btn btn-white-outline">See Event List</a></p>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="hero-img-wrap">
                    <img src="https://news.gnet.tn/wp-content/uploads/2022/06/couvvvvvvvvvv.jpg" class="img-fluid">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Hero Section -->

<h2 class="text-center mb-4">Event Calendar</h2>


<div class="container mt-5" id="calendar">
    <div id="calendar-container">
        <div id="calendar"></div>
    </div>
</div>

<div class="container mt-5" id="events">
    <h2 class="text-center mb-4">Available Events</h2>
    {# Filter Form #}
    <form method="get" action="{{ path('app_participant') }}" class="mb-4">
        <select name="category" class="form-select" onchange="this.form.submit()">
            <option value="">All Categories</option>
            {% for category in categories %}
                <option value="{{ category }}" {% if selectedCategory == category %}selected{% endif %}>
                    {{ category }}
                </option>
            {% endfor %}
        </select>
    </form>

    {# Event List #}
    <div class="row mt-4">
        {% for event in events %}
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="event-card p-4 border rounded shadow-sm">
                    <h3>{{ event.title }}</h3>
                    <p>{{ event.description }}</p>
                    <p><strong>Category:</strong> {{ event.eventCategory }}</p>
                    <p><strong>Date:</strong> {{ event.date|date('d-m-Y') }}</p>
                    <p>üìç {{ event.location }}</p>
                    <a href="{{ path('participant_event_participate', {'id': event.id}) }}" class="btn btn-secondary me-2 text-white">Participate</a>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p class="text-center">No events available for this category.</p>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.0/main.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var calendarEl = document.getElementById('calendar');
            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                events: [
                    {% for event in events %}
                        {
                            title: "{{ event.title }}",
                            start: "{{ event.date|date('Y-m-d') }}", 
                            description: "{{ event.description }}",
                            location: "{{ event.location }}",
                            url: "{{ path('participant_event_participate', {'id': event.id}) }}"
                        },
                    {% endfor %}
                ],
                eventClick: function(info) {
                    window.location.href = info.event.url;
                }
            });
            calendar.render();
        });
    </script>
{% endblock %}
