{% extends 'base.html.twig' %}

{% block title %}Available Events{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Available Events</h1>
        
        {% for event in events %}
            <div class="event-card">
                <h3>{{ event.title }}</h3>
                <p>{{ event.description }}</p>
                <p><strong>Date:</strong> {{ event.date|date('d-m-Y') }}</p>

                {# Show Participate button without checking login status #}
                <a href="{{ path('participant_event_participate', {'id': event.id}) }}" class="btn btn-primary">Participate</a>
            </div>
        {% endfor %}
    </div>
{% endblock %}



