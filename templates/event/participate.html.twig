{% extends 'base.html.twig' %}

{% block title %}Available Events{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1 class="text-center mb-4">Available Events</h1>
        
        <div class="row">
            {% for event in events %}
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="event-card p-4 border rounded shadow-sm">
                    <h3>{{ event.title }}</h3>
                    <p>{{ event.description }}</p>
                    <p><strong>Date:</strong> {{ event.date|date('d-m-Y') }}</p>

                    {# Show Participate button without checking login status #}
                    <a href="{{ path('participant_event_participate', {'id': event.id}) }}" class="btn btn-secondary me-2">Participate</a>
                </div>
            </div>
            {% else %}
            <div class="col-12">
                <p class="text-center">No events available at the moment.</p>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}



