            </tr>
        </thead>
        <tbody>
            {% for offre in offres %}
                <tr class="align-middle">
                    <td>{{ offre.id }}</td>
                    <td>{{ offre.title }}</td>
                    <td>{{ offre.category.name }}</td>
                    <td>
                        {% if offre.status == 'archiv√©' %}
                            <span class="badge bg-secondary">Archiv√©</span>
                        {% elseif offre.status == 'inactive' %}
                            <span class="badge bg-warning">Inactive</span>
                        {% else %}
                            <span class="badge bg-success">Actif</span>
                        {% endif %}
                    </td>
                    <td class="d-flex justify-content-center gap-2">
                        <a href="{{ path('app_offre_show', {'id': offre.id}) }}" class="btn btn-outline-primary btn-sm px-3">üëÅÔ∏è Voir</a>
                        <a href="{{ path('edit-offre', {'id': offre.id}) }}" class="btn btn-outline-warning btn-sm px-3">‚úèÔ∏è Modifier</a>
                        {% if offre.status == 'archiv√©' %}
                            <a href="{{ path('restore_offre', {id: offre.id}) }}" class="btn btn-outline-success btn-sm px-3">üîÑ Restaurer</a>
                        {% else %}
                            <a href="{{ path('archive_offre', {id: offre.id}) }}" class="btn btn-outline-secondary btn-sm px-3">üìÇ Archiver</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5" class="text-center text-muted py-4"><em>Aucune offre trouv√©e.</em></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
