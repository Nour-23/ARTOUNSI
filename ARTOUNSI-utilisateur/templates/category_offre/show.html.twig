{% extends 'base2.html.twig' %}

{% block title %}CategoryOffre{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4 text-center">CategoryOffre Details</h1>

        <div class="card">
            <div class="card-header bg-primary text-white">
                <h3 class="card-title">Category Information</h3>
            </div>
            <div class="card-body">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="w-25">Id</th>
                            <td>{{ category_offre.id }}</td>
                        </tr>
                        <tr>
                            <th>Name</th>
                            <td>{{ category_offre.name }}</td>
                        </tr>
                        <tr>
                            <th>Description</th>
                            <td>{{ category_offre.Description }}</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="mt-3">
            <a href="{{ path('app_category_offre_index') }}" class="btn btn-secondary">Back to list</a>
            <a href="{{ path('app_category_offre_edit', {'id': category_offre.id}) }}" class="btn btn-warning">Edit</a>
        </div>

        <div class="mt-3">
            {{ include('category_offre/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
